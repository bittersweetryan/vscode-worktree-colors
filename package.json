{
  "name": "cursor-worktree-colors",
  "displayName": "Cursor Worktree Colors",
  "description": "Apply subtle status bar colors per git worktree so multiple Cursor windows are easy to distinguish.",
  "version": "0.0.3",
  "publisher": "bittersweetryan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bittersweetryan/vscode-worktree-colors.git"
  },
  "homepage": "https://github.com/bittersweetryan/vscode-worktree-colors#readme",
  "bugs": {
    "url": "https://github.com/bittersweetryan/vscode-worktree-colors/issues"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "cursor",
    "vscode",
    "git",
    "worktree",
    "status bar",
    "pastel"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "files": [
    "out/**",
    "images/**",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "contributes": {
    "configuration": {
      "title": "Cursor Worktree Colors",
      "properties": {
        "cursorWorktreeColors.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic status bar coloring by git worktree."
        },
        "cursorWorktreeColors.saturation": {
          "type": "number",
          "default": 44,
          "minimum": 20,
          "maximum": 70,
          "description": "Pastel color saturation percentage."
        },
        "cursorWorktreeColors.lightness": {
          "type": "number",
          "default": 78,
          "minimum": 65,
          "maximum": 90,
          "description": "Pastel color lightness percentage."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "test": "vitest run",
    "generate:assets": "python3 scripts/generate_assets.py",
    "package:vsix": "npm run compile && npx @vscode/vsce package --allow-star-activation",
    "publish:patch": "npm run compile && npx @vscode/vsce publish patch --allow-star-activation",
    "publish:minor": "npm run compile && npx @vscode/vsce publish minor --allow-star-activation",
    "publish:major": "npm run compile && npx @vscode/vsce publish major --allow-star-activation"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
